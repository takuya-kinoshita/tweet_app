<div class="main user-new">
  <div class="container">
    <div class= "form-heading">Signup</div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>

          <%= form_tag("/users/create") do %>
          <p>name</p>
          <input name="name">
          <p>メールアドレス</p>
          <input name="email">
          <p>パスワード</p>
          <input name="password" type="password">
          <input type="submit" value="signup">
          <% end %>
      </div>
    </div>
  </div>
</div>
